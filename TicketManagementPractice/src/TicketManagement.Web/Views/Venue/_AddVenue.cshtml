@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model VenueViewModel
<h3 style="margin-top:15px;">
    @Localizer["Title"]
</h3>
<hr />
@using (Html.BeginForm("AddVenue", "Venue", FormMethod.Post))
{
    <div>
        <label class="control-label">@Localizer["Descr"]:&nbsp;</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Description)
        </div>
    </div>
    <div>
        <label class="control-label">@Localizer["Addr"]:&nbsp;</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Address)
        </div>
    </div>
    <div>
        <label class="control-label">@Localizer["Phone"]:&nbsp;</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Phone)
        </div>
    </div>
    <br />
    <input type="submit" class="btn btn-default" style="left:15px; position:relative" value="@Localizer["Add"]" />
}
