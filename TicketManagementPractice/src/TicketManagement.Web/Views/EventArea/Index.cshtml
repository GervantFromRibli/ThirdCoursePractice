@model TicketManagement.Web.Models.EventAreaViewModel
@{
    ViewBag.Title = "Таблица зон событий";
}
<script>
    function changeAddVisibility() {
        document.getElementById('UpdateEventArea').style.display = "none";
        document.getElementById('AddEventArea').style.display = "block";
    }
    function changeUpdateVisibility(id) {
        document.getElementById('UpdateEventArea').style.display = "block";
        document.getElementById('AddEventArea').style.display = "none";
        $("#id").val(id);
    }
    function SetSession() {
        sessionStorage.setItem("description", $("#value1").val());
        sessionStorage.setItem("eventName", $("#value2 option:selected").val());
    }
    function GetSession() {
        $("#value1").val(sessionStorage.getItem("description"));
        $("#value2").val(sessionStorage.getItem("eventName"));
    }
</script>

<body onbeforeunload="SetSession()" onload="GetSession()">
    <H1 style="margin-top:15px;">@ViewBag.Title:</H1>
    <form method="get">
        <div>
            <label class="control-label">Описание:&nbsp;</label>
            <input name="description" id="value1" class="form-control" />
        </div>
        <div>
            <label class="control-label">Название события:&nbsp;</label>
            <select name="eventName" id="value2" class="form-control">
                @foreach (var elem in Model.FilterEventNames)
                {
                    <option>@elem</option>
                }
            </select>
        </div>
        <br />
        <div>
            <input type="submit" value="Фильтр" class="btn btn-default" />
        </div>
    </form>
    <br />
    <div>
        <table border="1">
            <thead>
                <tr>
                    <td>
                        <a asp-action="Index" asp-route-type="Id">Id</a>
                    </td>
                    <td>
                        <a asp-action="Index" asp-route-type="des">Описание</a>
                    </td>
                    <td>
                        <a asp-action="Index" asp-route-type="eventName">Название события</a>
                    </td>
                    <td>
                        <a asp-action="Index" asp-route-type="startX">Начальная координата X</a>
                    </td>
                    <td>
                        <a asp-action="Index" asp-route-type="startY">Начальная координата Y</a>
                    </td>
                    <td>
                        <a asp-action="Index" asp-route-type="endX">Конечная координата X</a>
                    </td>
                    <td>
                        <a asp-action="Index" asp-route-type="endY">Конечная координата Y</a>
                    </td>
                    <td>
                        <a asp-action="Index" asp-route-type="price">Цена</a>
                    </td>
                </tr>
            </thead>
            @foreach (var elem in Model.EventAreas)
            {
                <tr>
                    <td>
                        <input type="button" class="btn-default" style="border:hidden; width:100%; background-color: rgba(0,100,0,0.9); color:white;" value="@elem.Id" onclick="changeUpdateVisibility(@elem.Id)" />
                    </td>
                    <td>
                        @elem.Description
                    </td>
                    <td>
                        @elem.EventName
                    </td>
                    <td>
                        @elem.StartCoordX
                    </td>
                    <td>
                        @elem.StartCoordY
                    </td>
                    <td>
                        @elem.EndCoordX
                    </td>
                    <td>
                        @elem.EndCoordY
                    </td>
                    <td>
                        @elem.Price
                    </td>
                </tr>
            }
        </table>
    </div>
    <div>
        @if (Model.PageViewModel.HasPreviousPage)
        {
            <a asp-action="Index"
               asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
               class="btn" style="border:2px solid white;">
                <i class="glyphicon glyphicon-chevron-left"></i>
                Назад
            </a>
        }
        @if (Model.PageViewModel.HasNextPage)
        {
            <a asp-action="Index"
               asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
               class="btn" style="border:2px solid white;">
                Вперед
                <i class="glyphicon glyphicon-chevron-right"></i>
            </a>
        }
    </div>
    <br />
    <div>
        <input type="submit" class="btn-default" value="Добавить запись" onclick="changeAddVisibility()" />
    </div>
    <hr />
    @ViewData["Message"]
    <div>
        <div id="AddEventArea" style="display:none;">
            @{await Html.RenderPartialAsync("_AddEventArea");}
        </div>
        <div id="UpdateEventArea" style="display:none;">
            @{await Html.RenderPartialAsync("_UpdateEventArea");}
        </div>
    </div>
</body>