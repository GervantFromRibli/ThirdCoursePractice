@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model EventAreaViewModel
@{ 
    List<string> eventNames = new List<string>();
    eventNames.AddRange(Model.FilterEventNames);
    eventNames.Remove(Localizer["All"].Value);
}
<h3 style="margin-top:15px;">
    @Localizer["Title"]
</h3>
@using (Html.BeginForm("UpdateEventArea", "EventArea", FormMethod.Post))
{
    <div>
        @Html.LabelFor(m => m.Id)
        <div class="col-md-10">
            <select name="Id" id="id">
                @foreach (var id in Model.Ids)
                {
                    <option>@id</option>
                }
            </select>
            &nbsp;
            <input name="action" type="submit" style="border:hidden; width:200px" value="@Localizer["Remove"]" />
        </div>
    </div>
    <div>
        <label class="control-label">@Localizer["Descr"]:&nbsp;</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Description)
        </div>
    </div>
    <div>
        <label class="control-label">@Localizer["EventName"]:&nbsp;</label>
        <div class="col-md-10">
            <select name="EventName">
                @foreach (var addr in eventNames)
                {
                    <option>@addr</option>
                }
            </select>
        </div>
    </div>
    <div>
        <label class="control-label">@Localizer["startX"]:&nbsp;</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.StartCoordX)
        </div>
    </div>
    <div>
        <label class="control-label">@Localizer["startY"]:&nbsp;</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.StartCoordY)
        </div>
    </div>
    <div>
        <label class="control-label">@Localizer["endX"]:&nbsp;</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.EndCoordX)
        </div>
    </div>
    <div>
        <label class="control-label">@Localizer["endY"]:&nbsp;</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.EndCoordY)
        </div>
    </div>
    <div>
        <label class="control-label">@Localizer["Price"]:&nbsp;</label>
        <div class="col-md-10">
            <input type="number" asp-for="Price" min="0" />
        </div>
    </div>
    <br />
    <input type="submit" class="btn btn-default" style="left:15px; position:relative" value="@Localizer["Change"]" />
}

