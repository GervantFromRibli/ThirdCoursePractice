@model TicketManagement.Web.Models.ChangePassView

<form method="post" asp-controller="Client" asp-action="ChangePassword">
    <div class="text-center">
        <h2>Профиль</h2>
        <div asp-validation-summary="ModelOnly"></div>
        <div id="passDiv">
            <label id="errors" class="errors"></label>
            <label asp-for="Password"></label><br />
            <input asp-for="Password" id="password" />
            <span asp-validation-for="Password"></span>
        </div>
        <hr />
        <div>
            <input type="submit" value="Сохранить пароль" id="acceptPass" class="acceptPass" />
        </div>
    </div>
</form>