@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SeatViewModel
@{ 
    List<string> areaDescrs = new List<string>();
    areaDescrs.AddRange(Model.FilterAreaDescriptions);
    areaDescrs.Remove(Localizer["All"].Value);
}
<h3 style="margin-top:15px;">
    @Localizer["Title"]
</h3>
<hr />
@using (Html.BeginForm("AddSeat", "Seat", FormMethod.Post))
{
    <div>
        <label class="control-label">@Localizer["AreaDescr"]:&nbsp;</label>
        <div class="col-md-10">
            <select name="AreaDescription">
                @foreach (var addr in areaDescrs)
                {
                    <option>@addr</option>
                }
            </select>
        </div>
    </div>
    <div>
        <label class="control-label">@Localizer["Row"]:&nbsp;</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Row)
        </div>
    </div>
    <div>
        <label class="control-label">@Localizer["Number"]:&nbsp;</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Number)
        </div>
    </div>
    <br />
    <input type="submit" class="btn btn-default" style="left:15px; position:relative" value="@Localizer["Add"]" />
}
